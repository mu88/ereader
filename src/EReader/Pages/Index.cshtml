@page
@model IndexModel

<div class="text-center">
    <h1 class="display-4">Files</h1>
    @for (var i = 0; i < Model.Files.Count; i++)
    {
        var file = Model.Files.ElementAt(i);
        var index = i;
        <p>
            <a asp-page-handler="Download" asp-route-id="@index">@file.Name</a>
        </p>
    }
</div>
